{
  "manifest_version": 2,

  "name": "Linkbank",
  "description": "A chrome extension to save and organize your links",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "activeTab", "storage"]
}
